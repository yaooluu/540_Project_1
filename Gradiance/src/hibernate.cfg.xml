<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gradiance</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping resource="edu/ncsu/gradiance/dao/Chapter.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Section.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Question.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Attempt.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Student.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Cover.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Answer.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Asques.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Enroll.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Course.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Assessment.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/User.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Book.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Professor.hbm.xml" />
        <mapping resource="edu/ncsu/gradiance/dao/Topic.hbm.xml" />
    </session-factory>
</hibernate-configuration>
